nav a:hover{color:var(--pri)}

/* === Haupt-Layout mit Umschaltung für RTL/LTR === */
.shell{display:grid;grid-template-columns:220px 1fr;grid-template-areas:"aside main";gap:16px;margin-top:16px}
[dir="rtl"] .shell{grid-template-columns:1fr 220px;grid-template-areas:"main aside"}

/* === Seitenmenü (Aside) === */
