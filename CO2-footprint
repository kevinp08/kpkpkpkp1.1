<script>
// === Fiktive Daten ===
const DATA=[
 {country:"DE",company:"GreenSteel",co2:42},{country:"DE",company:"AutoFuture",co2:58},
 {country:"USA",company:"EnergyCo",co2:120},{country:"USA",company:"Pacific Tech",co2:35},
 {country:"CN",company:"SinoChem",co2:210},{country:"CN",company:"BaoWorks",co2:95},
 {country:"IN",company:"Mahadev",co2:88},{country:"IN",company:"Kiran Textiles",co2:22},
 {country:"BR",company:"Amazonia",co2:40},{country:"BR",company:"Rio Logistics",co2:17},
 {country:"FR",company:"BleuCiment",co2:51},{country:"FR",company:"Hexa Foods",co2:14},
 {country:"JP",company:"Nippon Motors",co2:44},{country:"JP",company:"Kansai",co2:19},
 {country:"ZA",company:"Cape Mining",co2:73}
];

// === Referenzen auf DOM-Elemente ===
const T=document.querySelector('#tbl tbody'),q=document.querySelector('#q');
let sort={k:'country',dir:1};

// === Tabelle zeichnen ===
function render(rows){
  T.innerHTML='';
  rows.forEach(r=>{
    const tr=document.createElement('tr');
    ['country','company','co2'].forEach(k=>{
      const td=document.createElement('td');
      td.textContent=r[k];
      tr.appendChild(td);
    });
    T.appendChild(tr);
  });
}

// === Sortieren bei Klick auf Tabellenkopf ===
document.querySelectorAll('th').forEach(th=>th.onclick=()=>{
  const k=th.dataset.k;
  sort.dir=(sort.k===k?-sort.dir:1);
  sort.k=k;
  apply();
});

// === Filtern beim Tippen ===
q.oninput=apply;
function apply(){
  const s=q.value.toLowerCase();
  render(
    DATA.filter(r=>Object.values(r).some(v=>String(v).toLowerCase().includes(s)))
        .sort((a,b)=>{
          let A=a[sort.k],B=b[sort.k];
          if(sort.k==='co2'){A=+A;B=+B}
          return(A>B?1:A<B?-1:0)*sort.dir;
        })
  );
}

// === RTL/LTR-Umschalter ===
document.querySelector('#dir').onclick=()=>{
  document.documentElement.dir=document.documentElement.dir==='rtl'?'ltr':'rtl';
}

// === Initial zeichnen ===
apply();
</script>
</body>
